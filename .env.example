# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost/horizon_100

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520
ALGORITHM=HS256

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
WHISPER_MODEL=whisper-1

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_EXTENSIONS=["wav", "mp3", "m4a", "flac", "aac"]

# Audio Processing
ENABLE_SPEAKER_DIARIZATION=false

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Horizon 1000 Health Provider API
VERSION=0.1.0
DESCRIPTION=AI-powered health provider application for Horizon 1000 initiative